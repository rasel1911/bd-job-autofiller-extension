{
  "manifest_version": 3,
  "name": "BD Job Auto-Filler",
  "version": "1.0",
  "description": "Auto fill government job application forms",
  "permissions": ["scripting", "storage", "tabs", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.teletalk.com.bd/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["*://*.teletalk.com.bd/*"]
}